{
    "name": "@laravel-js/app",
    "version": "1.0.0",
    "description": "To develop a Node.js web application from the scratch",
    "private": true,
    "type": "module",
    "module": "./src/index.js",
    "exports": {
        ".": {
            "import": "./src/index.js",
            "default": "./src/index.js"
        },
        "./package.json": "./package.json"
    },
    "scripts": {
        "test": "nyc mocha ./tests",
        "test:report": "nyc report --reporter=text-lcov",
        "test:publish": "npm run test:report | coveralls",
        "ci": "npm i && npm test",
        "cia": "npm run ci && npm run test:publish",
        "cd": "npm run ci && npm publish",
        "start": "node ./index.js"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/linhntaim/laravel-js.git"
    },
    "keywords": [
        "laravel",
        "framework"
    ],
    "author": "Nguyen Tuan Linh <contact@linhntaim.com> (https://www.linhntaim.com)",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/linhntaim/laravel-js/issues"
    },
    "homepage": "https://github.com/linhntaim/laravel-js#readme",
    "dependencies": {
        "cookie-parser": "^1.4.6",
        "debug": "^4.3.4",
        "dotenv-packed": "^3.1.0",
        "express": "^4.18.2",
        "magic-class": "^1.1.0",
        "morgan": "^1.10.0"
    },
    "devDependencies": {
        "chai": "^4.3.10",
        "coveralls-next": "^4.2.0",
        "mocha": "^10.2.0",
        "nyc": "^15.1.0"
    }
}
